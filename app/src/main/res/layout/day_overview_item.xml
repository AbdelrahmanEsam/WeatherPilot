<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_75sdp"
    android:layout_height="@dimen/_120sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/purple_rounded_background">


    <ImageView
        android:id="@+id/cloudImageView"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:elevation="25dp"
        android:src="@drawable/weather_state"
        app:layout_constraintBottom_toTopOf="@+id/cloudNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cloudValueTextView"
        tools:ignore="ContentDescription,UnknownIdInLayout" />

    <TextView
        android:id="@+id/cloudValueTextView"
        style="@style/p6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="25dp"
        android:text="@string/timeValue"
        app:layout_constraintBottom_toTopOf="@+id/cloudImageView"
        app:layout_constraintEnd_toEndOf="@+id/cloudImageView"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/cloudImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cloudNameTextView"
        style="@style/p6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="25dp"
        android:text="@string/wind"
        android:textColor="@color/semi_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cloudImageView"
        app:layout_constraintStart_toStartOf="@+id/cloudImageView"
        app:layout_constraintTop_toBottomOf="@+id/cloudImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>